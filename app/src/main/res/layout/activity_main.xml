<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:columnCount="4">

        <Button
            android:id="@+id/button_seven"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/button_7"
            android:textSize="@dimen/button_text_size"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"/>

        <Button
            android:id="@+id/button_eight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/button_8"
            android:textSize="@dimen/button_text_size"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/button_nine"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/button_9"
            android:textSize="@dimen/button_text_size"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/button_multiplay"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/button_multiplay"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_four"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/button_4"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/button_5"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="@string/button_6"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_dev"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="3"
            android:text="@string/button_dev"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_one"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/button_one"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/button_two"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/button_three"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="3"
            android:text="@string/button_plus"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/button_zero"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="1"
            android:text="@string/button_dot"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="2"
            android:text="@string/button_equal"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="3"
            android:layout_column="3"
            android:text="@string/button_minus"
            android:textSize="@dimen/button_text_size" />

    </GridLayout>
</FrameLayout>